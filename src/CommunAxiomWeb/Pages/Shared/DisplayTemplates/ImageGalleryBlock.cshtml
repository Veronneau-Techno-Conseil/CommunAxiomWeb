<div id="@unique" class="glide level">
  <div class="glide__track" data-glide-el="track">
    <ul class="glide__slides">
            @foreach (var item in Model.Items)
            {
                <li class="glide__slide level-item">
                    <img src="@Url.Content(WebApp.Media.ResizeImage(((ImageBlock)item).Body.Media, 1100, 450))" class="d-block w-100">
                </li>
            }
    </ul>
  </div>
   <div class="glide__bullets" data-glide-el="controls[nav]">
        @for (var n = 0; n < Model.Items.Count; n++)
        {
            <button class="glide__bullet" data-glide-dir="=@n"></button>
        }
  </div>
</div>

