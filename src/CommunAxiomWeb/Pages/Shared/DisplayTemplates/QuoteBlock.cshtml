@model Piranha.Extend.Blocks.QuoteBlock


    <figure >
        <blockquote class="blockquote level-item">
            <p>@Model.Body</p>        
        </blockquote>
        @if (!string.IsNullOrWhiteSpace(Model.Author))
        {
            <figcaption class="blockquote-footer">&#8212;@Model.Author</figcaption>
        }
    </figure>
